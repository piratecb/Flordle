rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras de desenvolvimento - permite leitura e escrita em todas as coleções
    // NOTA: Para produção, estas regras devem ser mais restritivas

    // Coleção de teste - acesso livre para testar conexão
    match /test/{document=**} {
      allow read, write: if true;
    }

    // Coleção de jogos - guarda os resultados dos jogos
    match /games/{gameId} {
      allow read, write: if true;
    }

    // Coleção de estatísticas dos jogadores
    match /statistics/{statId} {
      allow read, write: if true;
    }


    // Coleção de utilizadores - cada utilizador só pode escrever os seus próprios dados
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

